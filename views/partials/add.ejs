<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    <i class="fa fa-plus" aria-hidden="true"></i> Add
  </button>
  
  <!-- Modal -->
<form action="/" method="post">
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add New Activity</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="my-3">
                    <input type="text" name="title" class="form-control" placeholder="Activity TItle">
                </div>
                <div class="my-3">
                    <textarea name="desc" class="form-control" rows="2" placeholder="Task Description..."></textarea>
                </div>
                <div class="my-3 ms-4">
                    <div class="my-2">
                        <input type="radio" name="category" id="long" value="long term" class="form-check-input">
                        <label for="long" class="form-check-label">Long Term</label>
                    </div>
                    <div class="my-2">
                        <input type="radio" name="category" id="short" value="short term" class="form-check-input">
                        <label for="short" class="form-check-label">Short Term</label>
                    </div>
                    <div class="my-2">
                        <input type="radio" name="category" id="common" value="common" class="form-check-input">
                        <label for="common" class="form-check-label">Common</label>
                    </div>
                </div>

                <div class="my-3">
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </div>
            <!-- <div class="modal-footer"></div> -->
          </div>
        </div>
      </div>
</form>